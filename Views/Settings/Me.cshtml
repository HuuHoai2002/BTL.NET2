@model BTL.NET2.Models.User

@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="app-container py-5">
    <form method="post" asp-action="Me" autocomplete="off" class="app-form mx-auto">
        <div class="app-form-head">
            <h2 class="form-heading">Cập nhật thông tin cá nhân</h2>
        </div>
        <div class="app-form-body">
            @{
                if (ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="">
                        <ul>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <div class="field-error" title="@error.ErrorMessage">
                                    <div class="icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20px" height="20px" viewBox=" 0 0 20 20"
                                    fill="currentColor">
                                            <path fill-rule="evenodd"
                                        d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z"
                                        clip-rule="evenodd" />
                                        </svg>
                                    </div>
                                    <span>@error.ErrorMessage</span>
                                </div>
                            }
                        </ul>
                    </div>
                }
                if (TempData["Success"] != null)
                {
                    <div class="field-success" title='@TempData["Success"]'>
                        <div class="icon">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                            stroke="currentColor" width="20px" height="20px">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
                            </svg>
                        </div>
                        <span>@TempData["Success"]</span>
                    </div>
                }
            }
            <div class="form-field">
                <label for="email" class="field-label">Email</label>
                <input type="email" class="field-input" placeholder="Nhập vào địa chỉ email" id="email"
                    value="@Model.Email" disabled />
            </div>
            <div class="form-field">
                <label for="Name" class="field-label">Tên</label>
                <input type="text" class="field-input" placeholder="Nhập vào tên" id="Name" name="Name"
                    value="@Model.Name" required />
            </div>
            <div class="form-field">
                <label for="Phone" class="field-label">Số điện thoại</label>
                <input type="number" class="field-input" placeholder="Nhập vào số điện thoại" id="Phone" name="Phone"
                    value="@Model.Phone" required />
            </div>
            <div class="form-field">
                <label for="Address" class="field-label">Địa chỉ</label>
                <input type="text" class="field-input" placeholder="Nhập vào địa chỉ" id="Address" name="Address"
                    value="@Model.Address" required />
            </div>
            <div class="form-field">
                <button class="btn btn-info text-white">
                    Cập nhật thông tin
                </button>
            </div>
        </div>
    </form>
</div>
